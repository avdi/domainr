<h1>Listing domains</h1>

<table>
  <tr>
    <th>Domain</th>
    <th>Registration date</th>
    <th>Expiration date</th>
    <th></th>

  </tr>

<% @domains.each do |domain| %>
  <tr>
    <td><%= domain.domain %></td>
    <td><%= domain.registration_date %></td>
    <td><%= domain.expiration_date %></td>
    <td><%= link_to 'Remove', domain, confirm: 'Are you sure?', method: :delete %>
      <%= link_to "recheck", "/update_now/#{domain.id}" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Domain', new_domain_path %>
